<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/carRow1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/carYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2011"
            android:layout_marginEnd="@dimen/gutter_margin_min"/>
        <TextView
            android:id="@+id/carMake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMW"
            android:layout_marginEnd="@dimen/gutter_margin_min"/>
        <TextView
            android:id="@+id/carModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 Series"
            android:layout_marginEnd="@dimen/gutter_margin_min"/>
        <TextView
            android:id="@+id/carTrim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="328i"
            android:layout_marginEnd="@dimen/gutter_margin_min"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/carRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/gutter_margin_min"
        app:layout_constraintTop_toBottomOf="@+id/carRow1">

        <TextView
            android:id="@+id/carPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18 2131 "
            android:layout_marginEnd="@dimen/gutter_margin_min"/>

        <TextView
            android:id="@+id/carSeparator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:layout_marginEnd="@dimen/gutter_margin_min"/>

        <TextView
            android:id="@+id/carMileage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="39.1km"
            android:layout_marginEnd="@dimen/gutter_margin_min"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

